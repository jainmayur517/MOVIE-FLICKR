<html>
<head>
  <title> movie_App</title>
  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
 
  

</head>

<body> 
    <style type="text/css">
      .bg{
        background-image: radial-gradient(ellipse at 20% 50%, rgba(19.61%, 10.84%, 50.84%, 0.5) 0%, rgba(19.61%, 7.84%, 50.84%, 0.88) 100%),url(<%="https:image.tmdb.org/t/p/original/"+data["backdrop_path"]%>);
        background-color: #cccccc; /* Used if the image is unavailablle */
        background-size: 100%;
        color: white;
        
        
      }
      .gh{
        background-color: black;
        color: white
      }
      a{
        color: inherit;
      }

      .flex-wrapper {
  display: flex;
  flex-flow: row nowrap;
      
}

.single-chart {
  width: 33%;
  justify-content: space-around ;
}

.circular-chart {
  display: block;
  margin: 10px auto;
  max-width: 60%;
  max-height: 50px;
}

.circle-bg {
  fill: none;
  stroke: #eee;
  stroke-width: 3.8;
}

.circle {
  fill: none;
  stroke-width: 2.8;
  stroke-linecap: round;
  animation: progress 1s ease-out forwards;
}

@keyframes progress {
  0% {
    stroke-dasharray: 0 100;
  }
}

.circular-chart.orange .circle {
  stroke: #ff9f00;
}

.circular-chart.green .circle {
  stroke: #4CC790;
}

.circular-chart.blue .circle {
  stroke: #3c9ee5;
}

.percentage {
  fill: #666;
  font-family: sans-serif;
  font-size: 0.5em;
  text-anchor: middle;
}
      </style>

<header class="gh">
    <br>

    <h1 class="text-center font-weight-bolder"><a href="/">MOvie`fliKR</a></h1>
    <br>
      </header>
      <br>
  
     
          
        <div class="bg">
           <br>
           <br>
           <br>
           <br>
           <br>

          <div class="padding">
              <div class="container">
                <div class="row">
                   
                  <div class="col-lg-3 col-md-4 col-sm-6">
                  <img src=<%="https:image.tmdb.org/t/p/w300/"+data["poster_path"]%> align="right">
                </div>
                <div class="col-lg-8 col-md-4 col-sm-6">
                  <h2><%=data["original_title"]%></h2>
                  <br>
                  
                    <div class="single-chart">
                      <svg viewbox="0 0 36 36" class="circular-chart orange">
                        <path class="circle-bg"
                          d="M18 2.0845
                            a 15.9155 15.9155 0 0 1 0 31.831
                            a 15.9155 15.9155 0 0 1 0 -31.831"
                        />
                        <path class="circle"
                          stroke-dasharray="<%=data["vote_average"]%>,100"
                          d="M18 2.0845
                            a 15.9155 15.9155 0 0 1 0 31.831
                            a 15.9155 15.9155 0 0 1 0 -31.831"
                        />
                        <text x="18" y="20.35" class="percentage">100%</text>
                      </svg>
                    </div>
                    
                      <h5><a href="/trailer/<%=data["id"]%>" class="fa fa-play"> Play Trailer</a></h5>
                      
                  <br>
                  <h3>overview</h3>
                  <p>
                      <%=data["overview"]%>
                  </p>
                  
                      <div class="container">
                          <div class="row">
                    <div class="col-lg-6">
                   <b><%=data["credits"].crew[0].name%></b>
                    <br>
                    <%=data["credits"].crew[0].job%>
                    </div>
                    <div class="col-lg-6">
                      <b><%=data["credits"].crew[1].name%></b>
                        <br>
                        <%=data["credits"].crew[1].job%>
                        </div>
                      </div>
                      </div>
                      <br>
                     

                      <div class="container">
                          <div class="row">
                    <div class="col-lg-6">
                   <b><%=data["credits"].crew[2].name%></b>
                    <br>
                    <%=data["credits"].crew[2].job%>
                    </div>
                   
                      </div>
                      </div>
                </div>
                
              </div>
           <br>
           <br>
           <br>
           <br>
           <br>
           <br>
           <br>
            </div>
            </div>
          </div>
            

<BR>
  
   
<div class="gh">
    <h2 align="center">STAR CAST</h2>
    <br>
         
          <div class="container">
          <div class="row" style="display:flex; flex-wrap:wrap;">
            

              
               




<% data["credits"].cast.forEach(function(movie){ %> 
  <div class="col-lg-3 col-md-4 col-sm-6">
    <div class="thumbnail">
    
        <img src=<%="https:image.tmdb.org/t/p/w200/"+movie["profile_path"]%>>
      
        <div class="caption">
            <h3> <%=movie["name"]%></h3>

        </div>
    </div>
  
  </div>
  <% }) %>
               
              </div>
            </div>
          </div>
           
                </body>
                </html>
                